using System;

class Program
{
    static void Main()
    {
        List<string> formattedNames = new List<string>();

        Console.WriteLine("Enter 6 full names:");

        for (int i = 0; i < 6; i++)
        {
            string fullName = Console.ReadLine();
            string[] parts = fullName.Split(' '); // Split into words
            string formattedName = "";

            foreach (string part in parts)
            {
                if (part.Length > 0)
                {
                    // Capitalize first letter, make the rest lowercase
                    string capitalized = char.ToUpper(part[0]) + part.Substring(1).ToLower();
                    formattedName += capitalized + " ";
                }
            }

            formattedNames.Add(formattedName.Trim()); // Remove extra space
        }

        Console.WriteLine("\nFormatted names:");
        foreach (string name in formattedNames)
        {
            Console.WriteLine(name);
        }
    }
}
