using System;

class Program
{
    static void Main()
    {
        List<string> employeeNames = new List<string>();
        List<float> salaries = new List<float>();

        Console.WriteLine("Enter employee names (type 'stop' to finish):");

        while (true)
        {
            string name = Console.ReadLine();

            if (name.ToLower() == "stop")
                break;

            employeeNames.Add(name);

            Console.Write("Enter salary for " + name + ": ");
            float salary = float.Parse(Console.ReadLine());
            salaries.Add(salary);
        }

        Console.WriteLine("\nAdjusted Salaries:");
        for (int i = 0; i < salaries.Count; i++)
        {
            float newSalary = salaries[i];

            // Apply raise logic
            if (newSalary < 15000)
                newSalary += newSalary * 0.05f;
            else if (newSalary <= 30000)
                newSalary += newSalary * 0.03f;

            salaries[i] = newSalary; // Store adjusted salary
            Console.WriteLine(employeeNames[i] + ": " + newSalary);
        }

        Console.WriteLine("\nEmployees earning above 25,000:");
        for (int i = 0; i < salaries.Count; i++)
        {
            if (salaries[i] > 25000)
                Console.WriteLine(employeeNames[i]);
        }
    }
}
